<%- include('partials/header') %>
    <h1 class='pt-3'>Compose</h1>
    
    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="newBlogTitle">Title</label>
            <input class="form-control" type="text" name="newBlogTitle" id="newBlogTitle" placeholder="Enter title" required>
        </div>
        <div class="form-group">
            <label for="newBlogContent">Content</label>
            <textarea class="form-control" name="newBlogContent" id="newBlogContent" cols="30" rows="10" required></textarea>
        </div>
        <button class="btn btn-success" type="submit">Publish</button>
    </form>

<%- include('partials/footer') %>